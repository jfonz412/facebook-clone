<% provide(:title, "Home") %>
<% if user_signed_in? %>
	<h1>Hello, <%= current_user.name %></h1>
	<%= render 'shared/post_form' %>
	<ul class="list-group">
		<% @user_feed.each do |post| %>
			<li class="list-group-item">
			<%= link_to post.user.name, post.user, :style => 'font-weight:bold; color:rgb(54, 88, 153)' %><br>
			<%= post.content %><br>
			<%= link_to "Like", likes_create_path(:post_id => post.id),  class: "like-button" %><br>
			<span class="date">
				<%= "posted #{post.formatted_date}" %>
			</span>
			</li>
		<% end %>
	</ul>
<% else %>
	<h1>Welcome to Facebook</h1>
<% end %>