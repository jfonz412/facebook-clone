<ul class="list-group">
	<% post.comments.each do |comment| %>
		<li class="list-group-item" style="border:none;">
			<div class="feed-name">
				<%= gravatar_for(comment.user, 30) %>
				<%= link_to comment.user.name, comment.user %><br>
			</div>
			<%= comment.content %><br>
			<span class="date">
				<%= "#{comment.formatted_date}" %>
				<% if current_user == comment.user %>
					<%= link_to "(delete)", comments_path(:comment_id => comment.id), method: :delete %>
				<% end %>
			</span>		
		</li>
	<% end %>
</ul>
