<div class="row">
	<h1 id="profile-pic">
		<%= @user.name %><br>
		<%= gravatar_for @user %>
	</h1>
	<div class="col-md-8" id="profile">
		<% if current_user == @user %>
			<%= render 'shared/post_form' %>
		<% end %>
			<%= render 'user_feed' %>
	</div>
	<!-- FRIENDS LIST -->
	<div class="col-md-4">
		<%= render 'friends' %>
	</div>
</div>
