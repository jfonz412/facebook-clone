<h1><%= @user.email %></h1>
<h2>Friends</h2>
<ul class="user-list">
	<% @user.friendships.accepted.each do |friendship| %>
		<li><%= link_to friendship.friend.email, user_path(friendship.friend) %>
			<% if current_user == @user %>
				<%= link_to "(remove friend)", friendship_path(:id => friendship.id), method: :delete %>
			<% end %>
		</li>
	<% end %>
</ul>

<ul class="user-list">
	<% @user.inverse_friendships.accepted.each do |friendship| %>
		<li><%= link_to friendship.user.email, user_path(friendship.user) %>
			<% if current_user == @user %>
				<%= link_to "(remove friend)", friendship_path(:id => friendship.id), method: :delete %>
			<% end %>
		</li>
	<% end %>
</ul>