<div class="friends-list">
	<h2>Friends</h2>
	<ul class="user-list">
		<% @user.friendships.accepted.each do |friendship| %>
			<li>
				<%= gravatar_for(friendship.friend, 50) %><br>
				<%= link_to friendship.friend.name, user_path(friendship.friend) %>
				<% if current_user == @user %>
					<%= link_to "(remove friend)", friendship_path(:id => friendship.id), method: :delete %>
				<% end %><br><br>
			</li>
		<% end %>
	</ul>
	<ul class="user-list" style="margin-top: -5%">
		<% @user.inverse_friendships.accepted.each do |friendship| %>
			<li>
				<%= gravatar_for(friendship.user, 50) %><br>
				<%= link_to friendship.user.name, user_path(friendship.user) %>
				<% if current_user == @user %>
					<%= link_to "(remove friend)", friendship_path(:id => friendship.id), method: :delete %>
				<% end %><br><br>
			</li>
		<% end %>
	</ul>
</div>